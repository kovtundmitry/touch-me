<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:id="@+id/rl.fragment.missing.avatar.container"
    android:background="#95000000"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avatar is missing!\nPlease, choose one"
        android:id="@+id/tv.missing.avatar.description"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bt.missing.avatar.take.photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv.missing.avatar.description"
        android:text="Take photo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt.missing.avatar.take.gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose from gallery"
        android:layout_below="@+id/tv.missing.avatar.description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>